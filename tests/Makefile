# Nombre de la librer√≠a
LIBFT = ../libft.a

# Carpeta donde est√°n los programas
SRCS = $(wildcard *.c)

# Generar ejecutables (cada .c tendr√° un .out)
EXECS = $(SRCS:.c=.out)

# Compilador y flags
CC = gcc
CFLAGS = -Wall -Wextra -Werror
LDFLAGS = -L. $(LIBFT)  # Enlaza con libft.a

# Regla principal: Compilar todos los ejecutables
all: $(EXECS)

# Crear ejecutables
%.out: %.c $(LIBFT)
	$(CC) $(CFLAGS) $< -o $@ $(LDFLAGS)
	@echo "‚úÖ Ejecutable $@ creado."

# Regla para compilar la librer√≠a si no existe
$(LIBFT):
	@echo "‚ö†Ô∏è  La librer√≠a $(LIBFT) no existe. Genera libft.a antes de compilar los programas."

# Limpiar ejecutables
clean:
	rm -f $(EXECS)
	@echo "üßπ Ejecutables eliminados."

# Limpiar todo
fclean: clean
	rm -f $(LIBFT)
	@echo "üßπ Librer√≠a $(LIBFT) eliminada."

# Recompilar desde cero
re: fclean all

# No trata estos nombres como archivos
.PHONY: all clean fclean re
